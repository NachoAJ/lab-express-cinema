{{#each movie}}
<div class="container">
  <a href="/movies" class="btn btn-dark">Go back</a>
  <div class="row">
    <div class="col-md-4">
      <img src="{{image}}" alt="Imagen portada">
    </div>
    <div class="col-md-8">
      <h1>{{title}}</h1>
      <h3>Director: {{director}}</h3>
      <h4>Stars</h4>
      <ul>
        {{#each stars}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <p>{{description}}</p>
      {{#each showtimes}}
      <span>{{this}} |</span>
      {{/each}}
    </div>
  </div>
</div>
{{/each}}